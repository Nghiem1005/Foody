<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@drawable/bottom_line">

    <ImageView
        android:id="@+id/img_food_item_booking"
        android:layout_weight="3"
        android:src="@drawable/a1"
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:paddingVertical="10dp"
        android:paddingRight="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">
        <TextView
            android:id="@+id/txt_name_item_booking"
            android:text="Name"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:id="@+id/txt_info_item_booking"
                android:text="Information"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="Ä‘"
                        android:textSize="14sp"
                        android:textColor="#BFB3B3"/>

                    <TextView
                        android:id="@+id/item_food_price_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="2000333"
                        android:textSize="14sp"
                        android:textColor="#BFB3B3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="x"
                        android:textSize="14sp"
                        android:textColor="#BFB3B3"/>

                    <TextView
                        android:id="@+id/item_food_quantity_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="2"
                        android:textSize="14sp"
                        android:textColor="#BFB3B3" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

